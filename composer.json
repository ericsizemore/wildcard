{
    "name": "esi/wildcard",
    "description": "A simple wildcard matcher.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "wildcard",
        "wildcards"
    ],
    "authors": [
        {
            "name": "Eric Sizemore",
            "email": "admin@secondversion.com",
            "homepage": "https://www.secondversion.com/"
        },
        {
            "name": "Ronald Kirschler",
            "email": "ron.kirschler@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/ericsizemore/wildcard/issues",
        "forum": "https://github.com/ericsizemore/wildcard/discussions",
        "source": "https://github.com/ericsizemore/wildcard/tree/master",
        "security": "https://github.com/ericsizemore/wildcard/security/policy"
    },
    "require": {
        "php": "^8.2 <8.5"
    },
    "require-dev": {
        "phpstan/phpstan": ">=1.11",
        "phpstan/phpstan-phpunit": ">=1.4",
        "phpstan/phpstan-strict-rules": ">=1.6",
        "phpunit/phpunit": "^10.5 || ^11.0"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Esi\\Wildcard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esi\\Wildcard\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "test": "phpunit"
    }
}